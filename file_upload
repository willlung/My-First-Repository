            background-color: white;
        }
        .upload-area {
            border: 2px dashed #007bff;
            padding: 30px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .upload-area.dragover {
            background-color: #e9f5ff;
        }
        #fileInput {
            display: none;
        }
        button {
            margin-top: 10px;
            padding: 10px 15px;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
